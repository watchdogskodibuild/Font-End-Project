{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": ["react", "react-hooks"],
    "rules": {
      "react/react-in-jsx-scope": "off" // React 17+ doesn't need import React
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  